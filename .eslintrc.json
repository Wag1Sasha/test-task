{
  "env": {
    "browser": true,
    "es2020": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "react-app", "plugin:jsx-a11y/strict"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "jsx-a11y", "@typescript-eslint"],
  "rules": {},
  "overrides": [
    {
      "files": ["**/*.test.js", "**/*.test.jsx", "**/*.test.tsx", "**/*.spec.js,", "**/*.spec.jsx", "**/*.spec.tsx"],
      "env": {
        "jest": true
      }
    }
  ]
}
